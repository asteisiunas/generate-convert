{
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "symfony/dependency-injection": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/phpcs src --standard=PSR12",
        "phpstan": "vendor/bin/phpstan analyse"
    }
}
